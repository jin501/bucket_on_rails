<div class="ui basic modal">
    <div class="ui icon header">
      <i class="archive icon"></i>
      Create a new Bucket
    </div>
    <div class="content">
      <div class="ui form">
        <div class="fields">
      <%= form_for @bucket do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :caption %>
        <%= f.text_field :caption %>
      </div>
          <div class="fields">
          <%= f.fields_for :goals do |g| %>
          <div class="field">
            <%= g.text_field :title, placeholder: "first goal"%>
          </div>
          <div class="field">
            <%= g.text_field :title, placeholder: "first goal"%>
          </div>
          <div class="field">
            <%= g.text_field :title, placeholder: "first goal"%>
          </div>
          <% end %>
        </div>

          <%= f.fields_for :hashtag do |g| %>
          <%= g.label :hashtag %>
          <div class="fields">
          <div class="field">
            <%= g.text_field :hashtag %>
          </div>
          <% end %>
        </div>

        <div class="actions">
        <%= f.submit 'Create', class: "ui green right float ok inverted button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
