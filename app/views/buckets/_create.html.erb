<div class="ui basic modal">
  <div class="ui icon header">
    <i class="archive icon"></i>
    Create a new Bucket
  </div>
  <div class="content">
    <div class="ui form">
      <div class="fields">
        <%= form_for @bucket do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id %>

          <%= f.label :title %>
          <%= f.text_field :title, required: true %>

          <%= f.label :caption %>
          <%= f.text_field :caption %>
      </div>
        <%= f.fields_for :goals do |g| %>
        <div class="fields">
          <%= render 'buckets/goal_fields', :g => g %>
        </div>
        <% end %>

        <!-- <%= link_to_add_association 'add goal', f, :goals %> -->


      <!-- <button class='ui green left float button' id='add-button' data-url='/goals/new'>add</button> -->

      <div class="fields">
          <input name='[hashtag]' placeholder="enter tags separated by a comma.." />
      </div>

      <div class="actions">
        <%= f.submit 'Create', class: "ui green right float ok inverted button" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
