<div class="container">
  <div class="ui three stackable link special cards">
  <% @buckets.each do |bucket| %>
  <a class="ui card" href="/buckets/<%= bucket.user.username %>/<%= bucket.id %>">
    <div class="content">
      <div class="right floated meta"><%= bucket.posted_time %> ago</div>
      <img class="ui avatar image" src="<%= bucket.user.avatar %>">
      <%= bucket.user.username %>
    </div>
    <div class="blurring dimmable image">
      <div class="ui dimmer">
        <div class="content">
          <div class="center">

            <div class="ui inverted button" id="follow">Follow</div>
          </div>
        </div>
      </div>
      <img src="bucket.png">
    </div>
    <div class="content">
      <div class="header">
        <%= bucket.title %>
      </div>
      <div class="description">
        <%= bucket.caption %>
      </div>
      <div class="meta">
        <span class="category">
          <% bucket.tags.each do |tag| %>
            #<%= tag.tag %>
          <% end %>
        </span>
      </div>
    </div>
    <div class="extra content">
      <%= bucket.goals.count %> items,
      <% @count = 0 %>
      <% bucket.goals.each do |goal| %>
        <% if goal.completed == true %>
          <%= @count += 1 %>
        <% end %>
      <% end %>
      <%= @count %> completed
    </div>
  </a>
  <% end %>
  </div>
</div>
