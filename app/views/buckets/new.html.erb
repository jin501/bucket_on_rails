<%= form_for @bucket do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :caption %>
  <%= f.text_field :caption %>

    <%= f.fields_for :goals do |g| %>
      <%= g.label :title %>
      <%= g.text_field :title %>
    <% end %>

    <%= f.fields_for :hashtag do |g| %>
      <%= g.label :hashtag %>
      <%= g.text_field :hashtag %>
    <% end %>

  <%= f.submit 'Create' %>
<% end %>
