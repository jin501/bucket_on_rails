<!DOCTYPE html>
<html>
  <head>
    <title>Bucket</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
      <div class="pusher">
        <div class="ui segment">
          <div class="ui secondary menu">
            <a class="item" href='/'>
              <img src='http://www.wyklejanietablic.pl/cc/icon_2142.png' />   <i class="ui vertical divider"></i> Bucket
            </a>
            <div class="right ui category search item">
              <div class="ui transparent icon input">
                <input class="prompt" type="text" placeholder="Search...">
                  <i class="search link icon"></i>
              </div>
            <div class="results"></div>
            </div>

        <a class="item" href='/explore'>
          <img src='/explore.png' />
        </a>

        <a class="item" href='#'>
          <img src='/heart.png' />
        </a>
        <a class="item" href="/buckets/<%= current_user.username %>">
          <img src='/profile.png' />
        </a>
        </div>
      </div>
      <div id='body'>
      <div id='main'>
        <%= render 'layouts/navbar' %>
        <%= yield %>
      </div>
      </div>
    </div>
    </body>

</html>
